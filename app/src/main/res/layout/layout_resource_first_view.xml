<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_custom"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewDown"
        android:layout_width="94dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:padding="@dimen/padding_view"
        android:text="TextView"
        android:fontFamily="sans-serif"
        android:drawableTop="@drawable/ic_arrow_downward_black_16dp"
        android:background="@drawable/shape_layout"

        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/textViewUp"
        app:layout_constraintStart_toEndOf="@+id/textViewUp"
        app:layout_constraintTop_toTopOf="@+id/textViewUp"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"

        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/shape_rect1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/transparent" />

    <TextView
        android:id="@+id/textViewUp"
        android:layout_width="94dp"
        android:layout_height="60dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/shape_layout"
        android:drawableTop="@drawable/ic_arrow_upward_black_24dp"
        android:gravity="center"
        android:fontFamily="sans-serif"

        android:padding="@dimen/padding_view"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>